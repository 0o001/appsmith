{
  "identifier": "UPLOAD",
  "controlType": "SECTION",
  "conditionals": {
    "show": "{{actionConfiguration.formData.command === 'UPLOAD'}}"
  },
  "children": [
    {
      "controlType": "SECTION",
      "label": "Command to execute",
      "description": "Upload file(s) to the remote server",
      "children": [
        {
          "label": "Working Directory",
          "propertyName" : "workingDirectory",
          "configProperty": "actionConfiguration.formData.workingDirectory",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "evaluationSubstitutionType": "TEMPLATE",
          "placeholderText": "/home/user/directory"
        },
        {
          "label": "Content",
          "propertyName" : "content",
          "configProperty": "actionConfiguration.formData.content",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "evaluationSubstitutionType": "TEMPLATE",
          "placeHolderText": "{{ FilePicker1.files }}"
        }
      ]
    }
  ]
}